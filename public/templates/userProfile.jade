.container.contentContainer
  .row
    .col-md-3.sidebar
      // SIDEBAR
      .userInfo
        img(src='images/Layer-3.png')
        br
        h4 {{currentUser.profile.name}}
        
        p {{currentUser.profile.occupation}}
        p {{currentUser.profile.location}}
        p {{currentUser.profile.email}}
        p {{currentUser.profile.website}}
        p Employers:{{currentUser.profile.employers}}
        p Experience:{{currentUser.profile.experience}}
      // </div>
      // <div class="row">
      .userSkillSet
        h4  Skills 
        p(ng-repeat='skill in currentUser.profile.skills') {{skill}}
    // SIDEBAR ENDS
    .col-md-9.mainContent
      // MAIN CONTENT
      div(bs-active-pane='tabs.activeTab', bs-tabs='')
        div(ng-repeat='tab in tabs', title='{{ tab.title }}', ng-bind='tab.content', bs-pane='')
        div(ng-include='', src='tabs[tabs.activeTab].page')

      

    // MAIN CONTENT ENDS

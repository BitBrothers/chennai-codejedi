.container
  .row
    .center-form.panel
      .panel-body
        h2.text-center Log in
        form(method='post', ng-submit='login()', name='loginForm')
          .form-group.has-feedback
            input.form-control.input-lg(type='text', name='email', ng-model='email', placeholder='Email', required='', autofocus='')
            span.ion-at.form-control-feedback
          .form-group.has-feedback
            input.form-control.input-lg(type='password', name='password', ng-model='password', placeholder='Password', required='')
            span.ion-key.form-control-feedback
          button.btn.btn-lg.btn-block.btn-success(type='submit', ng-disabled='loginForm.$invalid') Log in
          br
          p.text-center
            a(href='#') Forgot your password?
          p.text-center.text-muted
            small
              | Don't have an account yet?
              a(href='/signup') Sign up
          .signup-or-separator
            h6.text or
            hr
          button.btn.btn-lg.btn-block.btn-facebook(ng-click='facebookLogin()')
            span.ion-social-facebook
            | Sign in with Facebook
          button.btn.btn-lg.btn-block.btn-google-plus(ng-click='googleLogin()')
            span.ion-social-googleplus
            | Sign in with Google
